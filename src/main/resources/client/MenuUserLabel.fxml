<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<HBox fx:id="fxRootContainer" alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kwasheniak.client.MenuUserLabelController">
    <BorderPane fx:id="fxImageFrame" style="-fx-background-color: grey; -fx-background-radius: 90;">
        <center>
            <ImageView fx:id="fxUserImage" fitHeight="30.0" pickOnBounds="true" preserveRatio="true"
                       BorderPane.alignment="CENTER">
                <Image url="@../images/user-image.png"/>
            </ImageView>
        </center>
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
        </padding>
    </BorderPane>
    <Label fx:id="fxUsername" alignment="TOP_LEFT" contentDisplay="CENTER" graphicTextGap="0.0" text="username">
        <font>
            <Font size="15.0"/>
        </font>
        <padding>
            <Insets left="5.0" right="5.0"/>
        </padding>
    </Label>
    <padding>
        <Insets bottom="3.0" left="5.0" right="5.0" top="3.0"/>
    </padding>
</HBox>
